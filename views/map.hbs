<p>here's a map</p>
<div class="map" id="view-map"></div>

<div id="route-details">
	<h2 class="listHeading">Details</h2>
	<h3>Total Time: {{ hbsMap.total_time}} </h3>
	<h3>Neighborhoods: {{ hbsMap.neighborhood}}</h3>
	<h3>Creator: {{ hbsMap.user.username}}</h3>
	<script>
		var timestamp = {{ hbsMap.created_at }}
		var date = timestamp.toDateString();
	</script>
	<h3>Created: {{ date }}</h3>
</div>

<div id="guide-notes">
	<h2>Guide Notes</h2>
	<p>{{hbsMap.guide_notes}}</p>
</div>

<input id="map-object" type="hidden" value="{{ map }}">

<script src="/javascripts/map.js"></script>